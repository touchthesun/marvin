{
  "name": "marvin-extension",
  "version": "0.1.0",
  "description": "Browser extension for organizing and leveraging browsing history through an active knowledge graph",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "watch": "webpack --watch --config webpack.config.js",
    "dev": "webpack --config webpack.config.js --watch --mode=development",
    "prod": "webpack --config webpack.config.js --mode=production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:core": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest tests/core/container-init.test.js --verbose --testPathPattern=tests/core --config jest.core.config.js",
    "test:core:profile": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc --inspect' jest tests/core/container-init.test.js --verbose --testPathPattern=tests/core --config jest.core.config.js --logHeapUsage",
    "test:services": "jest --testPathPattern=tests/services",
    "test:background": "jest --testPathPattern=tests/background",
    "test:components": "jest --testPathPattern=tests/components",
    "test:components:no-msw": "jest --config jest.components.config.js",
    "test:diagnostics": "jest --testPathPattern=tests/diagnostics --config jest.diagnostics.config.js"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/plugin-transform-nullish-coalescing-operator": "^7.27.1",
    "@babel/plugin-transform-optional-chaining": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "babel-jest": "^29.7.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "fast-glob": "^3.3.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lru-cache": "^11.1.0",
    "mini-css-extract-plugin": "^2.9.2",
    "msw": "^2.8.4",
    "style-loader": "^4.0.0",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "d3": "^7.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.13"
  }
}
